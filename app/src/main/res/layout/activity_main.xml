<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cardPic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/cariboo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caribou Coffee"
        android:textSize="40sp"
        android:id="@+id/caribouText"
        android:fontFamily="sans-serif-light"
        android:textColor="#7B1FA2"
        android:layout_below="@id/cardPic"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: 2720 Annapolis Cir N Suite F, Plymouth, Mn 55441"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/address"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/caribouText"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: (952) 933-987"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/number"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@id/address" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website: caribou.com"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/site"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@id/number" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open - Close: 06:00 AM - 09:00PM"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/time"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@id/site" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Here: doordash.com"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/order"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@id/time" />

</RelativeLayout>